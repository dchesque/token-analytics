# Crypto Analyzer Production Environment Configuration
# Copy this file to .env and fill in your values

# ======================
# APPLICATION SETTINGS
# ======================

# Application Mode (required for web interface)
WEB_MODE=true

# Application Port
PORT=8000

# Debug Mode (set to false in production)
DEBUG=false

# Production Flag
PRODUCTION=true

# Domain Configuration (update with your domain)
DOMAIN=crypto.yourdomain.com

# ======================
# API KEYS (Optional)
# ======================

# LunarCrush API Key
# Get your key at: https://lunarcrush.com/developers
# Required for social metrics analysis
LUNARCRUSH_API_KEY=

# Messari API Key  
# Get your key at: https://messari.io/api
# Optional - provides enhanced market data
MESSARI_API_KEY=

# ======================
# PERFORMANCE SETTINGS
# ======================

# Cache Duration (seconds)
# How long to cache API responses
CACHE_DURATION=600

# Maximum Worker Processes
# Adjust based on VPS CPU cores
MAX_WORKERS=4

# Request Timeout (seconds)
REQUEST_TIMEOUT=30

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# ======================
# SECURITY SETTINGS
# ======================

# Session Security
SECURE_COOKIES=true
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=strict

# Secret Key (generate a strong random key)
# python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=

# Allowed Hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1,crypto.yourdomain.com

# CORS Settings
CORS_ENABLED=true
CORS_ORIGINS=*

# ======================
# DATABASE/STORAGE
# ======================

# Data Directory
DATA_DIR=/app/data

# Reports Directory
REPORTS_DIR=/app/reports

# Max Report Age (days)
REPORT_RETENTION_DAYS=30

# ======================
# MONITORING
# ======================

# Logging Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log Format
LOG_FORMAT=json

# Metrics Collection
METRICS_ENABLED=true
METRICS_PORT=9090

# Health Check Interval (seconds)
HEALTH_CHECK_INTERVAL=60

# ======================
# RESOURCE LIMITS
# ======================

# Memory Limit (MB)
MEMORY_LIMIT=1024

# CPU Limit (cores)
CPU_LIMIT=2.0

# ======================
# PYTHON SETTINGS
# ======================

# Python Encoding
PYTHONIOENCODING=utf-8

# Unbuffered Output
PYTHONUNBUFFERED=1

# Don't Write Bytecode
PYTHONDONTWRITEBYTECODE=1

# Optimization Level (0-2)
PYTHONOPTIMIZE=2

# ======================
# EXTERNAL SERVICES
# ======================

# Redis Cache (optional)
# REDIS_URL=redis://localhost:6379/0

# PostgreSQL Database (optional)
# DATABASE_URL=postgresql://user:pass@localhost/dbname

# Elasticsearch (optional, for advanced search)
# ELASTICSEARCH_URL=http://localhost:9200

# ======================
# FEATURE FLAGS
# ======================

# Enable API Documentation
API_DOCS_ENABLED=true

# Enable WebSocket Support
WEBSOCKET_ENABLED=false

# Enable Email Notifications
EMAIL_NOTIFICATIONS=false

# Enable Telegram Bot
TELEGRAM_BOT_ENABLED=false
TELEGRAM_BOT_TOKEN=

# ======================
# BACKUP SETTINGS
# ======================

# Automatic Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=7

# S3 Backup (optional)
# S3_BACKUP_ENABLED=false
# S3_BUCKET=
# S3_ACCESS_KEY=
# S3_SECRET_KEY=
# S3_REGION=us-east-1

# ======================
# ADVANCED SETTINGS
# ======================

# Thread Pool Size
THREAD_POOL_SIZE=10

# Connection Pool Size
CONNECTION_POOL_SIZE=20

# Queue Size
QUEUE_SIZE=100

# Batch Size for Bulk Operations
BATCH_SIZE=50

# ======================
# NOTES
# ======================
# 1. Never commit this file with actual values to version control
# 2. Use strong, unique passwords for all API keys
# 3. Regularly rotate API keys and secrets
# 4. Monitor resource usage and adjust limits accordingly
# 5. Enable only the features you need
# 6. Keep this file secure with proper permissions (chmod 600)